<Window x:Name="LogInWin" x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Title="Login Window" Height="400" Width="690">
    <!--control the style for the buotons-->
    <Window.Resources>
        <Style TargetType="Button" x:Key="RoundedButtonStyle">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontFamily" Value="Consolas" />
            <Setter Property="Background" Value="{x:Null}" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="TextElement.Foreground" Value="#FFDFF8E6"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="TextElement.Foreground" Value="#FFDFF8E6"/>
                    <Setter Property="FontSize" Value="25"/>
                </Trigger>
            </Style.Triggers>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15" />
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>

    <Grid>
        <MediaElement x:Name="enter" Source="C:\Users\osher\source\repos\osher-v\dotNet5782_1070_1239\PL\New Project.avi" HorizontalAlignment="left" VerticalAlignment="Center" Height="400" Width="690" Volume="0" Stretch="Fill" UnloadedBehavior="Manual" Loaded="enter_Loaded"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button  x:Name="ShowDroneList" Content="Login" Style="{StaticResource RoundedButtonStyle}" BorderThickness="0" Grid.Row="1" Margin="92,115,0,32" Foreground="#FFF7F1F1" Width="80" Click="ShowDroneList_Click" Visibility="Visible">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="{TemplateBinding Background}" Height="50" Width="50"/>
                            <ContentPresenter/>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Label x:Name="loginlabal" Content="שולי משלוחים בעמ" HorizontalAlignment="Left" Margin="240,46,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="210" Foreground="#FFF9F1F1" FontSize="22" FontFamily="Consolas" FontWeight="Bold"/>
        </Grid>
    </Grid>
</Window>
