<Window x:Name="LogInWin" x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="Login Window" Height="500" Width="860" >
    <Grid>
        <MediaElement x:Name="enter" Source="New Project.avi" HorizontalAlignment="Center"  VerticalAlignment="Center" Height="484" Width="860" Volume="0" Stretch="Fill" UnloadedBehavior="Manual" Loaded="enter_Loaded"/>
        <Grid>
            <Grid x:Name="AddOn" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="443*"/>
                    <RowDefinition Height="41*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TabControl VerticalContentAlignment="Top" Style="{StaticResource MaterialDesignNavigatilRailTabControl}" materialDesign:ColorZoneAssist.Mode="PrimaryMid" Background="{x:Null}">
                    <TabItem x:Name="TICadmin" GotFocus="TICadmin_GotFocus">
                        <TabItem.Header>
                            <StackPanel  Height="auto"  Width="auto">
                                <materialDesign:PackIcon Kind="AdministratorOutline"  Width="24" Height="24" HorizontalAlignment="Center" />
                                <TextBlock Text="מנהל"  HorizontalAlignment="Center" />
                            </StackPanel>
                        </TabItem.Header>
                        <Grid Background="{DynamicResource MaterialDesignDarkBackground}">
                            <TextBox materialDesign:HintAssist.Hint="שם משתמש" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" Width="606" Margin="0,106,0,0" MaxLength="10" Height="73" Foreground="#FF673AB7" />
                            <PasswordBox x:Name="FloatingPasswordBox1" HorizontalContentAlignment="Center" materialDesign:HintAssist.Hint="סיסמת מנהל"  MaxLength="10"
                                          Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" Margin="91,279,91,106" Foreground="#FF673AB7" RenderTransformOrigin="0.5,0.5" >
                                <PasswordBox.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform ScaleY="1"/>
                                        <SkewTransform/>
                                        <RotateTransform/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </PasswordBox.RenderTransform>
                            </PasswordBox>

                        </Grid>

                    </TabItem>

                    <TabItem x:Name="TIUser" GotFocus="TIUser_GotFocus" >
                        <TabItem.Header>
                            <StackPanel   Height="auto"   Width="auto">
                                <materialDesign:PackIcon Kind="User" Width="24" Height="24"  HorizontalAlignment="Center" />
                                <TextBlock Text="לקוח" HorizontalAlignment="Center" />
                            </StackPanel>
                        </TabItem.Header>
                        <Grid Background="{DynamicResource MaterialDesignDarkBackground}">
                            <TextBox materialDesign:HintAssist.Hint="שם משתמש" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" Width="706" Margin="0,103,0,0" MaxLength="10" Height="105" Foreground="#FFFBFBFB" />
                            <PasswordBox x:Name="FloatingPasswordBox" HorizontalContentAlignment="Center" materialDesign:HintAssist.Hint="סיסמת מנהל"  MaxLength="10"
                                          Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" Margin="41,304,41,73" Foreground="White" />

                            <Button x:Name="BNewUser" Visibility="Visible" Style="{StaticResource MaterialDesignRaisedButton}"  materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                    materialDesign:ButtonProgressAssist.IsIndeterminate="True" Content="הרשמה" Margin="586,53,23,358"
                     Background="#FFFF0909" BorderBrush="#FFF14A2F" FontSize="14" FontWeight="Bold" Click="BNewUser_Click"   />

                        </Grid>
                    </TabItem>
                </TabControl>

                <Button x:Name="Blogin"  Style="{StaticResource MaterialDesignRaisedButton}" materialDesign:ButtonProgressAssist.Value="-1" materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
             materialDesign:ButtonProgressAssist.IsIndeterminate="True" Margin="0,5,0,4"
              Click="Blogin_Click"  IsEnabled="False" FontSize="14" Grid.Row="1"  />

            </Grid>
            <Grid x:Name="Disiaper" Visibility="Visible">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock HorizontalAlignment="Left" Margin="128,162,0,0" Text="{Binding Value, ElementName=PBloding, StringFormat=\{0:#0.0\}%}"  TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FFEEDADA" FontSize="10" FontWeight="Bold" Width="28" Grid.Column="1" Grid.Row="1" Height="17"/>
                <Label Content="בס&quot;ד&#xD;&#xA;" Grid.Column="1" HorizontalAlignment="Left" Margin="291,10,0,0" VerticalAlignment="Top" Foreground="#FFF5F4F4" FontWeight="Bold" FontFamily="Consolas"/>
                <Label Content="Loding.." HorizontalAlignment="Left" Margin="400,135,0,0" VerticalAlignment="Top" Foreground="#FFF5F4F4" FontWeight="Bold" FontFamily="Consolas" Height="25" Grid.ColumnSpan="2" Grid.Row="1"/>
                <Label Content="בס&quot;ד&#xD;&#xA;" Grid.Column="1" HorizontalAlignment="Left" Margin="291,10,0,0" VerticalAlignment="Top" Foreground="#FFF5F4F4" FontWeight="Bold" FontFamily="Consolas"/>
                <ProgressBar x:Name="PBloding" HorizontalAlignment="Left" Height="14" Margin="326,165,0,0" VerticalAlignment="Top" Width="210" ValueChanged="PBloding_ValueChanged" Grid.ColumnSpan="2" Grid.Row="1" BorderBrush="{x:Null}">
                    <ProgressBar.Foreground>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFECEBE4"/>
                            <GradientStop Color="#FF673AB7" Offset="0.526"/>
                        </LinearGradientBrush>
                    </ProgressBar.Foreground>
                    <ProgressBar.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFF3F3F1" Offset="0.009"/>
                            <GradientStop Color="Black" Offset="0.48"/>
                        </LinearGradientBrush>
                    </ProgressBar.Background>
                </ProgressBar>
            </Grid>
        </Grid>
    </Grid>
</Window>
